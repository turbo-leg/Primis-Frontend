# Local Development Environment Variables
# Copy this file to .env.local and update with your values

# Backend API URL (HTTP/HTTPS)
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL (optional - auto-detected from API_URL if not set)
# Development: ws://localhost:8000/api
# Production: wss://api.primiseducare.com/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000/api

# App Configuration
NEXT_PUBLIC_APP_NAME=Primis EduCare
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_REALTIME_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_NOTIFICATION_SOUNDS=true
